<?xml version="1.0" encoding="UTF-8"?>

<plist version="1.0">
  <dict>
    <key>Label</key>
    <string>dev.statsd</string>

    <key>Boxen</key>
    <dict>
      <key>Description</key>
      <string>Simple daemon for easy stats aggregation.</string>

      <key>Port</key>
      <integer><%= scope.lookupvar "statsd::config::port" %></integer>
    </dict>

    <key>ProgramArguments</key>
    <array>
      <string><%= scope.lookupvar "statsd::config::executable" %></string>
    </array>

    <key>RunAtLoad</key>
    <true />

    <key>KeepAlive</key>
    <true />

    <key>UserName</key>
    <string><%= scope.lookupvar "::boxen_user" %></string>

    <key>WorkingDirectory</key>
    <string><%= scope.lookupvar "statsd::config::libdir" %></string>

    <key>StandardErrorPath</key>
    <string><%= scope.lookupvar "statsd::config::logdir" %>/statsd.log</string>

    <key>StandardOutPath</key>
    <string><%= scope.lookupvar "statsd::config::logdir" %>/statsd.log</string>
  </dict>
</plist>
